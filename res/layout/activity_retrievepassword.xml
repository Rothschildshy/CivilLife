<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_back_color"
    tools:context="com.CivilLife.Activity.RegisterActivity" >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_bar"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@color/activity_bar_color" >

        <TextView
            android:id="@+id/tx_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/retrievepassword_title"
            android:textColor="@color/activity_bar_title_color"
            android:textSize="@dimen/activity_typeface_size" />

        <TextView
            android:id="@+id/tx_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12.0dip"
            android:text="@string/discover_login_cancel"
            android:textColor="@color/tab_typeface"
            android:textSize="16.0sp" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/relativeLayout1" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48.0dip"
                android:layout_marginLeft="24.0dip"
                android:layout_marginRight="24.0dip"
                android:layout_marginTop="36.0dip"
                android:background="@drawable/my_item_top_selector" >

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="24.0dip"
                    android:layout_height="24.0dip"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="12.0dip"
                    android:src="@drawable/icon_user" />

                <EditText
                    android:id="@+id/edit_user"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="3.0dip"
                    android:layout_toRightOf="@+id/imageView2"
                    android:background="@color/color_white"
                    android:ems="10"
                    android:hint="请输入用户名" >
                </EditText>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48.0dip"
                android:layout_marginLeft="24.0dip"
                android:layout_marginRight="24.0dip"
                android:layout_marginTop="1.0dip"
                android:background="@drawable/layout_selector" >

                <ImageView
                    android:id="@+id/ImageView01"
                    android:layout_width="24.0dip"
                    android:layout_height="24.0dip"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="12.0dip"
                    android:src="@drawable/icon_user" />

                <EditText
                    android:id="@+id/edit_email"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="3.0dip"
                    android:layout_toRightOf="@+id/ImageView01"
                    android:background="@color/color_white"
                    android:ems="10"
                    android:hint="请输入绑定邮箱"
                    android:inputType="textEmailAddress"
                     >
                </EditText>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48.0dip"
                android:layout_marginLeft="24.0dip"
                android:layout_marginRight="24.0dip"
                android:layout_marginTop="1.0dip"
                android:background="@drawable/layout_selector" >

                <ImageView
                    android:id="@+id/ImageView11"
                    android:layout_width="24.0dip"
                    android:layout_height="24.0dip"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="12.0dip"
                    android:src="@drawable/icon_pwd" />

                <EditText
                    android:id="@+id/edit_password"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="3.0dip"
                    android:layout_toRightOf="@+id/ImageView11"
                    android:background="@color/color_white"
                    android:ems="10"
                    android:hint="请输入新的密码"
                    android:inputType="textPassword" >
                </EditText>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48.0dip"
                android:layout_marginLeft="24.0dip"
                android:layout_marginRight="24.0dip"
                android:layout_marginTop="1.0dip"
                android:background="@drawable/my_item_bottm_selector" >

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="24.0dip"
                    android:layout_height="24.0dip"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="12.0dip"
                    android:src="@drawable/icon_pwd" />

                <EditText
                    android:id="@+id/edit_repetition_password"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="3.0dip"
                    android:layout_toRightOf="@+id/imageView1"
                    android:background="@color/color_white"
                    android:ems="10"
                    android:hint="请再次输入密码"
                    android:inputType="textPassword" >
                </EditText>
            </RelativeLayout>

            <Button
                android:id="@+id/btn_submit_to"
                android:layout_width="match_parent"
                android:layout_height="42.0dip"
                android:layout_margin="24.0dip"
                android:background="@drawable/btn_login_selector"
                android:text="@string/register_submit_to"
                android:textColor="@color/btn_sele"
                android:textSize="18sp" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>